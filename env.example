# ============================================
# TruEditor - Ortam Değişkenleri Şablonu
# ============================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun:
# cp env.example .env
#
# Geliştirici: Abdullah Doğan
# ============================================

# ============================================
# ENVIRONMENT (Zorunlu)
# ============================================
# Değerler: development, staging, production
ENV=development

# ============================================
# DJANGO AYARLARI
# ============================================

# Güvenlik anahtarı (production'da güçlü bir anahtar kullanın)
# Python ile oluşturmak için: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug modu (production'da False olmalı - ENV'e göre otomatik)
DEBUG=True

# İzin verilen host'lar (virgülle ayırın)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS izin verilen origin'ler
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# CSRF güvenilir origin'ler
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# VERİTABANI (PostgreSQL)
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Neon: postgresql://user:pass@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
# Local: postgresql://trueditor:password@localhost:5432/trueditor

DATABASE_URL=

# ============================================
# REDIS / CACHE
# ============================================
# Format: redis://HOST:PORT/DB veya rediss://... (SSL)
# Upstash: rediss://default:xxx@region.upstash.io:6379
# Local: redis://localhost:6379/0

REDIS_URL=

# ============================================
# CELERY
# ============================================
# Varsayılan olarak REDIS_URL kullanılır

CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# Development'ta senkron çalıştır (Redis olmadan)
CELERY_EAGER=true

# ============================================
# AWS S3 / S3-COMPATIBLE STORAGE
# ============================================
# S3 kullanmak için USE_S3=true yapın

USE_S3=false

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=trueditor-files
AWS_S3_REGION_NAME=eu-central-1

# S3-compatible (MinIO, DigitalOcean Spaces) için özel endpoint
AWS_S3_ENDPOINT_URL=

# ============================================
# ORCID OAuth 2.0 (Zorunlu)
# ============================================
# Sandbox için: https://sandbox.orcid.org/developer-tools
# Production için: https://orcid.org/developer-tools

ORCID_CLIENT_ID=
ORCID_CLIENT_SECRET=
ORCID_REDIRECT_URI=http://localhost:3000/auth/orcid/callback

# ORCID API URLs
# Sandbox: https://sandbox.orcid.org, https://api.sandbox.orcid.org
# Production: https://orcid.org, https://api.orcid.org
ORCID_BASE_URL=https://sandbox.orcid.org
ORCID_API_URL=https://api.sandbox.orcid.org

# ============================================
# EMAIL (SMTP)
# ============================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=TruEditor <noreply@trueditor.com>

# ============================================
# SECURITY (Production)
# ============================================

SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=31536000

# ============================================
# OBSERVABILITY
# ============================================

# Log seviyesi: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Sentry DSN (error tracking - opsiyonel)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# RATE LIMITING
# ============================================

THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# ============================================
# JWT TOKEN
# ============================================

JWT_ACCESS_LIFETIME_MINUTES=15
JWT_REFRESH_LIFETIME_DAYS=7

# ============================================
# DOSYA YÜKLEMELERİ
# ============================================

MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.doc,.docx,.pdf,.jpg,.jpeg,.png,.tiff,.tif

# ============================================
# PDF OLUŞTURMA
# ============================================

PDF_DPI=150
