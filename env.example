# ============================================
# TruEditor - Ortam Değişkenleri Şablonu
# ============================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun:
# cp env.example .env
# ============================================

# ============================================
# DJANGO AYARLARI
# ============================================

# Güvenlik anahtarı (production'da güçlü bir anahtar kullanın)
# Python ile oluşturmak için: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug modu (production'da False olmalı)
DEBUG=True

# İzin verilen host'lar (virgülle ayırın)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF güvenilir origin'ler
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# VERİTABANI (PostgreSQL)
# ============================================

# Veritabanı bağlantı URL'i
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://trueditor:password@localhost:5432/trueditor_db

# ============================================
# REDIS
# ============================================

# Redis bağlantı URL'i (Celery broker ve cache için)
REDIS_URL=redis://localhost:6379/0

# ============================================
# CELERY
# ============================================

# Celery broker URL'i (Redis kullanıyoruz)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# AWS S3 (Dosya Depolama)
# ============================================

# AWS erişim anahtarları
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 bucket ayarları
AWS_STORAGE_BUCKET_NAME=trueditor-files
AWS_S3_REGION_NAME=eu-central-1

# S3 özel ayarlar
AWS_S3_FILE_OVERWRITE=False
AWS_DEFAULT_ACL=private
AWS_QUERYSTRING_EXPIRE=900

# ============================================
# ORCID OAuth 2.0
# ============================================

# ORCID API client credentials
# Sandbox için: https://sandbox.orcid.org/developer-tools
# Production için: https://orcid.org/developer-tools
ORCID_CLIENT_ID=your-orcid-client-id
ORCID_CLIENT_SECRET=your-orcid-client-secret

# OAuth callback URL (frontend URL + callback path)
ORCID_REDIRECT_URI=http://localhost:3000/auth/orcid/callback

# ORCID API base URL
# Sandbox: https://sandbox.orcid.org
# Production: https://orcid.org
ORCID_BASE_URL=https://sandbox.orcid.org

# ORCID API base URL
# Sandbox: https://api.sandbox.orcid.org
# Production: https://api.orcid.org
ORCID_API_URL=https://api.sandbox.orcid.org

# ============================================
# EMAIL (SMTP)
# ============================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP ayarları (production için)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Varsayılan gönderen email
DEFAULT_FROM_EMAIL=TruEditor <noreply@trueditor.com>

# ============================================
# FRONTEND
# ============================================

# Frontend URL (CORS için)
FRONTEND_URL=http://localhost:3000

# API base URL (frontend'de kullanılacak)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ============================================
# LOGGING
# ============================================

# Log seviyesi: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# ============================================
# DOSYA YÜKLEMELERİ
# ============================================

# Maksimum dosya boyutu (bytes) - 50MB
MAX_UPLOAD_SIZE=52428800

# İzin verilen dosya uzantıları
ALLOWED_EXTENSIONS=.doc,.docx,.pdf,.jpg,.jpeg,.png,.tiff,.tif

# ============================================
# PDF OLUŞTURMA
# ============================================

# WeasyPrint font dizini
WEASYPRINT_FONT_DIR=/app/static/fonts

# PDF çıktı kalitesi (72-300 DPI)
PDF_DPI=150
